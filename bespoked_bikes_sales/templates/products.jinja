{% extends "base.jinja" %}

{% block head %}
<title>Products</title>
{% endblock head %}

{% block body %}
<div class="container">
	<h1 class="display-3 mt-3 mb-3 text-center">Products</h1>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Manufacturer</th>
				<th scope="col">Style</th>
				<th scope="col">Purchase Price</th>
				<th scope="col">Sale Price</th>
				<th scope="col">Quantity on Hand</th>
				<th scope="col">Commission Percentage</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
			<tr>
				<td>{{ product.name }}</td>
				<td>{{ product.manufacturer }}</td>
				<td>{{ product.style }}</td>
				<td>{{ "${:,.2f}".format(product.purchase_price) }}</td>
				<td>{{ "${:,.2f}".format(product.sale_price) }}</td>
				<td>{{ product.quantity }}</td>
				<td>{{ "{0:.0%}".format(product.commission_percentage) }}</td>
				<td>
					<a href="/products/{{ product.id }}" class="btn btn-primary">Update</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock body %}