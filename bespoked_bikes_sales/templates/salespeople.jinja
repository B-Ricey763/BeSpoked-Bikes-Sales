{% extends "base.jinja" %}

{% block head %}
<title>Salespeople</title>
{% endblock head %}

{% block body %}
<div class="container">
	<h1 class="display-3 mt-3 mb-3 text-center">Salespeople</h1>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">First</th>
				<th scope="col">Last</th>
				<th scope="col">Address</th>
				<th scope="col">Phone</th>
				<th scope="col">Start Date</th>
				<th scope="col">Termination Date</th>
				<th scope="col">Manager</th>
			</tr>
		</thead>
		<tbody>
			{% for salesperson in salespeople %}
			<tr>
				<td>{{ salesperson.first_name }}</td>
				<td>{{ salesperson.last_name }}</td>
				<td>{{ salesperson.address }}</td>
				<td>{{ salesperson.phone }}</td>
				<td>{{ salesperson.start_date }}</td>
				<td>{{ salesperson.termination_date }}</td>
				<td>{{ salesperson.manager }}</td>
				<td>
					<a href="/salespeople/{{ salesperson.id }}" class="btn btn-primary">Update</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock body %}